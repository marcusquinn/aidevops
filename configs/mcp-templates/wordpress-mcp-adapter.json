{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WordPress MCP Adapter Configuration",
  "description": "MCP configuration for WordPress sites using the official WordPress MCP Adapter",
  "mcpServers": {
    "wordpress-local-example": {
      "_comment": "STDIO transport for LocalWP sites - fastest, requires local WP-CLI",
      "command": "wp",
      "args": [
        "--path=/Users/YOUR_USERNAME/Local Sites/YOUR_SITE_NAME/app/public",
        "mcp-adapter",
        "serve",
        "--server=mcp-adapter-default-server",
        "--user=admin"
      ]
    },
    "wordpress-remote-http": {
      "_comment": "HTTP transport for remote sites - works without SSH access",
      "command": "npx",
      "args": [
        "-y",
        "@automattic/mcp-wordpress-remote@latest"
      ],
      "env": {
        "WP_API_URL": "https://example.com/wp-json/mcp/mcp-adapter-default-server",
        "LOG_FILE": "~/.aidevops/.agent-workspace/tmp/mcp-wordpress.log",
        "WP_API_USERNAME": "YOUR_USERNAME",
        "WP_API_PASSWORD": "YOUR_APPLICATION_PASSWORD"
      }
    },
    "wordpress-remote-ssh": {
      "_comment": "SSH STDIO transport for remote sites with SSH access",
      "command": "ssh",
      "args": [
        "user@ssh.example.com",
        "cd /home/user/public_html && wp mcp-adapter serve --server=mcp-adapter-default-server --user=admin"
      ]
    },
    "wordpress-hostinger-ssh": {
      "_comment": "SSH with sshpass for Hostinger (password-based SSH)",
      "command": "sshpass",
      "args": [
        "-f", "~/.ssh/hostinger_password",
        "ssh",
        "u123456789@ssh.example.com",
        "cd ~/domains/example.com/public_html && wp mcp-adapter serve --server=mcp-adapter-default-server --user=admin"
      ]
    },
    "wordpress-multisite-main": {
      "_comment": "Multisite network - main site",
      "command": "wp",
      "args": [
        "--path=/Users/YOUR_USERNAME/Local Sites/YOUR_MULTISITE/app/public",
        "--url=https://main-site.local",
        "mcp-adapter",
        "serve",
        "--server=mcp-adapter-default-server",
        "--user=admin"
      ]
    },
    "wordpress-multisite-subsite": {
      "_comment": "Multisite network - subsite",
      "command": "wp",
      "args": [
        "--path=/Users/YOUR_USERNAME/Local Sites/YOUR_MULTISITE/app/public",
        "--url=https://subsite.main-site.local",
        "mcp-adapter",
        "serve",
        "--server=mcp-adapter-default-server",
        "--user=admin"
      ]
    }
  },
  "_setup": {
    "requirements": [
      "WordPress 6.0+ on target site",
      "WordPress Abilities API plugin installed",
      "WordPress MCP Adapter plugin installed",
      "WP-CLI installed (for STDIO transport)",
      "Application Password created (for HTTP transport)"
    ],
    "installation": {
      "composer": "composer require wordpress/abilities-api wordpress/mcp-adapter",
      "manual": "Download from https://github.com/WordPress/mcp-adapter/releases"
    },
    "verification": {
      "list_servers": "wp --path=/path/to/wordpress mcp-adapter list",
      "test_tools": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"tools/list\",\"params\":{}}' | wp --path=/path/to/wordpress mcp-adapter serve --user=admin --server=mcp-adapter-default-server"
    }
  }
}
